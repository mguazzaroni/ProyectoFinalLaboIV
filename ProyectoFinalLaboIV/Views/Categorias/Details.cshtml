@model ProyectoFinalLaboIV.Models.Categoria

@{
    ViewData["Title"] = "Detalles de la categoría";
}

<h1>Detalles de la Categoría</h1>

<div class="table">
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
</div>
<hr />
<div>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Borrar</a>
    <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
</div>
