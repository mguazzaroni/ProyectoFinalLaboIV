@model ProyectoFinalLaboIV.Models.ProveedorProducto

@{
    ViewData["Title"] = "Borrar";
}

<h3>¿Esta seguro que desea borrar la relación?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Proveedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Proveedor.Nombre)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Producto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Producto.Nombre)
        </dd class>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProveedorId" />
        <input type="hidden" asp-for="ProductoId" />
        <input type="submit" value="Borrar" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
    </form>
</div>
