@model ProyectoFinalLaboIV.Models.ProveedorProducto
@{
    ViewData["Title"] = "Detalles";
}

<h2>Detalles</h2>
<div class="table">
    <hr />
    <dl class="row">

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Proveedor)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proveedor.Nombre)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Producto)
            </ dt >

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Nombre)
        </dd>

    </dl>
</div>
<hr />
<div>
    @Html.ActionLink("Editar", "Edit", "ProveedoresProductos", new { ProveedorId = Model.ProveedorId, ProductoId = Model.ProductoId }, new { @class = "btn btn-info" })
    @Html.ActionLink("Borrar", "Delete", "ProveedoresProductos", new { ProveedorId = Model.ProveedorId, ProductoId = Model.ProductoId }, new { @class = "btn btn-danger" })
    <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
</div>

