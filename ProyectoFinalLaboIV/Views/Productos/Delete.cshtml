@model ProyectoFinalLaboIV.Models.Producto

@{
    ViewData["Title"] = "Borrar Producto";
}
<h2>¿Está seguro que desea borrar el producto?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
           $@Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Imagen))
            {
                <img src="~/images/productos/@Model.Imagen" class="img-thumbnail"
                     style="height:50px; width:50px" asp-append-version="true" />
            }
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Favorito)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Favorito)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.MarcaProducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MarcaProducto.Nombre)
        </dd class>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.CategoriaProducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaProducto.Descripcion)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
    </form>
</div>
<script src="~/js//imagePreview.js"></script>
