@model ProyectoFinalLaboIV.Models.ViewModels.ProductosViewModel

@{
    ViewData["Title"] = "Lista de productos";
}

<h2>Lista de productos</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear nuevo producto</a>
</p>
<div class="flex-row text-center">
    <form asp-action="Index" method="get">
        <p>
            Nombre: <input type="text" asp-for="@Model.Nombre" name="buscarNombre" />
            Marca: <select class="form-select" name="filtrarMarca" asp-items="@Model.Marcas"><option value="Todas">Todas</option></select>
            Categoria: <select class="form-select" name="filtrarCateg" asp-items="@Model.Categorias"><option value="Todas">Todas</option></select>
            <input type="submit" class="btn btn-secondary btn-sm" value="Filtrar"/>
        </p>

    </form>
</div>
<div class="d-flex justify-content-around">
    <table class="table table-responsive-md table-bordered text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Productos[0].Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Productos[0].Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Productos[0].Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Productos[0].Imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Productos[0].Favorito)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Productos[0].MarcaProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Productos[0].CategoriaProducto)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Productos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Imagen))
                        {
                            <img src="~/images/productos/@item.Imagen" class="img-thumbnail"
                                 style="height:50px; width:50px" asp-append-version="true" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Favorito)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MarcaProducto.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriaProducto.Descripcion)
                    </td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="~/js//imagePreview.js"></script>
